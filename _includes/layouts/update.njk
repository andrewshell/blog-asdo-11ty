---
layout: layouts/base.njk
---
<article class="blog-post h-entry" itemscope itemtype="https://schema.org/BlogPosting">
<section class="e-content" itemprop="articleBody">
{{ content | safe }}
<p>
{%- set absolutePostUrl %}{{ page.url | htmlBaseUrl(metadata.url) }}{% endset %}  
<a href="{{ absolutePostUrl }}" class="u-url" rel="me" itemprop="url"><time class="small dt-published" itemprop="datePublished" datetime="{{ created | htmlDateString }}" >{{ created | readableDate('DDD') }}</time></a>
{% if isDiffDay(created, date) %}
<br><time class="small dt-updated" itemprop="dateModified" datetime="{{ date | htmlDateString }}" >Updated {{ date | readableDate('DDD') }}</time>
{% endif %}
</p>
</section>
<hr>
<footer>
{% include "bio.njk" %}
</footer>
</article>